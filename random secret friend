from random import *
def get_secret_friend(name):
    frend = list(name)
    shuffle(frend)
    dic = {}
    j = 0
    for i in name:
        
        if i == frend[j] and j + 2 <= len(frend):
            frend[j], frend[j+1] = frend[j+1], frend[j]
        if i == frend[j] and j + 2 > len(frend):          
            frend[j], dic[frend[j-1]] = dic[frend[j-1]], frend[j]
            
        dic[i] = frend[j]
        j += 1
        
    return dic
